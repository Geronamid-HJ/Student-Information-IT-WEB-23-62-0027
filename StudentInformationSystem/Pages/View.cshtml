@page
@model StudentInformationSystem.Pages.ViewModel
@{
    ViewData["Title"] = "View";
}

<h1>View</h1>
<div class="form-horizontal">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].StudentName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].Course.CourseName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Student)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.CourseName)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Course[0].CourseName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Course[0].LecturerName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Course)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LecturerName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
